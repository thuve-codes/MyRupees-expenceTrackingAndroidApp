<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".AddTransactionActivity">

    <!-- Header Image -->
    <ImageView
        android:id="@+id/ivHeader"
        android:padding="20dp"
        android:layout_width="378dp"
        android:layout_height="118dp"
        android:layout_marginTop="44dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_addamount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Form Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="200dp"
        app:cardBackgroundColor="#FAFAFA"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:foreground="?attr/selectableItemBackground"
        android:translationZ="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/titleInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="Title"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="#757575" />
            </LinearLayout>

            <!-- Amount Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/amountInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="Amount"
                    android:inputType="numberDecimal"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="#757575" />
            </LinearLayout>

            <!-- Category Spinner -->
            <Spinner
                android:id="@+id/categorySpinner"

                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_spinner_background"
                android:popupBackground="#EE262626"
                android:spinnerMode="dropdown" />

            <!-- Type (Income/Expense) -->
            <RadioGroup
                android:id="@+id/typeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/incomeRadio"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_background"
                    android:buttonTint="#6200EA"
                    android:gravity="center"
                    android:text="Income"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/expenseRadio"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_background"
                    android:buttonTint="#6200EA"
                    android:gravity="center"
                    android:text="Expense"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black" />
            </RadioGroup>

            <!-- Save Button -->
            <Button
                android:id="@+id/saveBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:animationCache="true"
                android:background="@drawable/button_gradient"
                android:fontFamily="sans-serif-medium"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_save"
                app:iconGravity="start" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#1e1f25"
        android:clipToPadding="false"
        android:elevation="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:itemIconTint="@color/nav_icon_selector"
        app:itemRippleColor="@color/nav_ripple"
        app:itemTextColor="@color/nav_text_selector"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>